%script{:src  => "{{ '/js/jquery-1.11.2.min.js' | prepend: site.baseurl }}"}
%script{:src  => "{{ '/js/jquery-ui.min.js' | prepend: site.baseurl }}"}
%script{:src  => "{{ '/js/fakeLoader.js' | prepend: site.baseurl }}"}
:javascript
  $('body').delay(100).fadeIn(1000);

  $("#fakeLoader").fakeLoader({
    timeToHide:2500,
    bgColor:"#8fd6e8",
    spinner:"spinner8"
  });
%script{:src  => "{{ '/js/bootstrap.min.js' | prepend: site.baseurl }}"}
%script{:src  => "{{ '/js/fullPage.js' | prepend: site.baseurl }}"}
:javascript
  $(document).ready(function() {
    $('#fullpage').fullpage({
      anchors: ['homePage', 'workPage', 'aboutPage', 'contactPage'],
      menu: '#lateral-nav',
      sectionsColor: ['#f6f6f6', '#f68ea5', '#7e7bc0', '#f6f6f6'],
      scrollingSpeed: 1000,
      easing: 'easeInOutCubic',
      scrollBar: true
    });
  });
%script{:src  => "{{ '/js/main.js' | prepend: site.baseurl }}"}
